FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (only what API needs)
COPY src/api.py /app/api.py
COPY src/llm_service.py /app/llm_service.py

# Copy trained model into container
COPY models/student_performance_sgd.joblib /app/models/student_performance_sgd.joblib

# Expose FastAPI port
EXPOSE 8000

# Run FastAPI
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]
